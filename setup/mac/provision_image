# This script is intended for use by maintainers in the creation of provisioned
# images, not during regular CI workflows which run on every job. See README.md
# for usage details.

set -euxo pipefail

cleanup () {
  rm -rf "${drake_root}"

  brew cleanup --prune=all
  rm -rf "$(brew --cache)"
  rm -rf "${HOME}/Library/Logs/Homebrew/*"

  # Update this version of pip as Drake updates its supported Python versions.
  pip3.14 cache purge
}

usage () {
  cat << EOF
Usage: $1 [-h|--help] [{--drake-sha SHA|--drake-pull PR [--merge]}]

Options:
  --help              Display this message and exit
  --drake-sha         A Drake git SHA to use for provisioning
  --drake-pull PR     A Drake pull request ID to use for provisioning
  --merge             Use the merge of the PR and master rather than the PR head
EOF
}

if [[ "${EUID}" -eq 0 ]]; then
  echo 'ERROR: This script must NOT be run as root' >&2
  exit 2
fi

drake_sha=
drake_pull=
drake_pull_merge=0

while [ "${1:-}" != "" ]; do
  case "$1" in
    --drake-sha)
      shift
      if [[ -z "$1" ]]; then
        echo -e "ERROR: --drake-sha requires a SHA.\n$(usage $0)" >&2
        exit 1
      fi
      drake_sha="$1"
      ;;
    --drake-pull)
      shift
      if [[ -z "$1" ]]; then
        echo -e "ERROR: --drake-pull requires a PR ID.\n$(usage $0)" >&2
        exit 1
      fi
      drake_pull="$1"
      ;;
    --merge)
      shift
      drake_pull_merge=1
      ;;
    -h|--help)
      usage "$0"
      exit 1
      ;;
    *)
      echo -e "ERROR: Invalid command line argument.\n$(usage $0)" >&2
      exit 1
  esac
  shift
done

if [[ -n "${drake_sha}" && -n "${drake_pull}" ]]; then
  echo 'ERROR: At most one of --drake-sha or --drake-pull may be given' >&2
  exit 1
fi

if [[ -z "${drake_pull}" && "${drake_pull_merge}" -eq 1 ]]; then
  echo 'ERROR: --merge can only be given with --drake-pull' >&2
  exit 1
fi

readonly setup_mac_dir="$(dirname "${BASH_SOURCE}")"
readonly drake_root="$(mktemp -d -t drake-ci-provisioning)"

trap 'cleanup' EXIT

[[ -z "${TERM-}" ]] || export HOMEBREW_COLOR=1

export HOMEBREW_CASK_OPTS=--require-sha
export HOMEBREW_CURL_RETRIES=4
export HOMEBREW_NO_AUTO_UPDATE=1
export HOMEBREW_NO_INSECURE_REDIRECT=1
export HOMEBREW_NO_INSTALL_CLEANUP=1

brew analytics off
brew update || (sleep 15; brew update)
brew upgrade

readonly gurobi_1203_pkg='/tmp/gurobi12.0.3_macos_universal2.pkg'
curl --retry 4 -o $gurobi_1203_pkg \
  https://packages.gurobi.com/12.0/$(basename $gurobi_1203_pkg)
echo "e1e771e9cf8aa7882b1cdc000be91c2b5fadd18f3fcdd00f2824dd207be09613  $gurobi_1203_pkg" \
  | sha256sum -c -
sudo /usr/sbin/installer -pkg $gurobi_1203_pkg -target /

# Install Java, to be used for Jenkins. The version must be the same as the one
# used by Jenkins.
brew install --cask temurin@21

# Clone Drake, and optionally check out a particular branch.
git clone https://github.com/RobotLocomotion/drake.git \
  --depth 1 "${drake_root}"
drake_branch=
if [[ -n "${drake_sha}" ]]; then
  drake_branch="${drake_sha}"
elif [[ -n "${drake_pull}" ]]; then
  if [[ "${drake_pull_merge}" -eq 1 ]]; then
    drake_branch="pull/${drake_pull}/merge"
  else
    drake_branch="pull/${drake_pull}/head"
  fi
fi
if [[ -n "${drake_branch}" ]]; then
  git -C "${drake_root}" fetch origin "${drake_branch}" --depth 1
  git -C "${drake_root}" checkout FETCH_HEAD
fi

# Install Drake's prerequisites.
readonly drake_setup_script="${drake_root}/setup/mac/install_prereqs.sh"
if [[ ! -f "${drake_setup_script}" ]]; then
  echo "drake setup script not found; expected: ${drake_setup_script}" >&2
  exit 1
fi
# Use `--developer` to install the prereqs for building wheels.
"${drake_setup_script}" --developer
